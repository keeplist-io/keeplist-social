{
  "name": "keeplist-social",
  "version": "1.0.0",
  "description": "Cross-platform library for validating and sanitizing social media profile URLs",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": "v22.10.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "prebuild": "node scripts/build-patterns.js",
    "build": "rollup -c",
    "pretest": "npm run build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "prepare": "npm run build",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist src/generated",
    "publish-all": "../scripts/publish.sh",
    "build-all": "../scripts/build.sh",
    "version": "ts-node scripts/version.ts",
    "preversion": "npm test",
    "postversion": "git add package.json ../dart/pubspec.yaml && git commit -m \"chore: bump version\" && git push && git push --tags"
  },
  "keywords": [
    "social",
    "links",
    "url",
    "validation",
    "sanitization"
  ],
  "author": "Michel Deeb",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keeplist-io/keeplist-social.git"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.0",
    "rollup-plugin-dts": "^6.1.1",
    "ts-jest": "^29.1.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1"
  }
}
